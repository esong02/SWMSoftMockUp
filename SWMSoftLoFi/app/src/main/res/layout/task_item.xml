<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:background="@drawable/sub_info_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/field1">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:contentDescription="Help MEEEE"
                android:background="@drawable/help_button"
                android:src="@drawable/ic_help_outline_white_24dp"
                android:id="@+id/helpButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/helpButton"
                android:layout_toStartOf="@id/helpButton">

                <TextView
                    android:padding="10dp"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="4"
                    android:id="@+id/componentDescription"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="italic"/>

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select a Rating"
            android:paddingTop="5dp"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:paddingTop="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/rButton1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="@color/green"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:backgroundTint="@color/green"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/rButton2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="@color/lime_green"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:backgroundTint="@color/lime_green"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/rButton3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="@color/yellow"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:backgroundTint="@color/yellow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/rButton4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="@color/orange"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:backgroundTint="@color/orange"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/rButton5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="@color/red"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:backgroundTint="@color/red"/>

             </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/field2"
            android:gravity="center">

            <EditText
                android:padding="10dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="4"
                android:id="@+id/commentText"
                android:text="Comments"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/photoButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_button"
            android:backgroundTint="@color/grey"
            android:src="@drawable/ic_photo_camera_white_48dp"
            app:backgroundTint="@color/grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Take a Picture"
            android:layout_marginBottom="30dp"
            android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>