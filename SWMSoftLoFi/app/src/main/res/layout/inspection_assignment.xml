<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lgrey"
    xmlns:tools="http://schemas.android.com/tools">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:id="@+id/assignHeader"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="40sp"
            android:layout_marginLeft="10sp"
            android:text="Inspector"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:text="Assignments"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </GridLayout>

    <LinearLayout
        android:layout_below="@id/assignHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inspections_todo">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:rowCount="1"
            android:background="@drawable/side_nav_bar">


            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="left"
                android:src="@drawable/user_icon4" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="center_vertical"
                android:text="User A"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                />

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:padding="5sp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_assessment_white_24dp" />

        </GridLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:layout_marginBottom="5sp"
            android:background="@drawable/side_nav_bar">


            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:gravity="left|center_vertical"
                android:src="@drawable/user_icon4" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="center_vertical"
                android:text="User B"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:padding="5sp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_assessment_white_24dp" />

        </GridLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:layout_marginBottom="5sp"
            android:background="@drawable/side_nav_bar">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/user_icon4" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="center_vertical"
                android:text="User C"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:padding="5sp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_assessment_white_24dp" />


        </GridLayout>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:layout_marginBottom="5sp"
            android:background="@drawable/side_nav_bar">


            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/user_icon4" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:padding="5sp"
                android:layout_gravity="center_vertical"
                android:text="User D"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="10sp"
                android:padding="5sp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_assessment_white_24dp" />


        </GridLayout>
    </LinearLayout>




</RelativeLayout>