<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="250dp"
    android:layout_height= "450dp">

    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_white_24dp"
        android:id="@+id/iTypeCancelButton"
        android:background="@drawable/red_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@id/iTypeCancelButton"
        android:background="@drawable/info_background"
        android:id="@+id/subLayer">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_header"
            android:text="Select an Inspection"
            android:textStyle="bold"
            android:id="@+id/iTypeHeader"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

        <ListView
            android:layout_below="@id/iTypeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inspectionTypeList"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </LinearLayout>

</RelativeLayout>