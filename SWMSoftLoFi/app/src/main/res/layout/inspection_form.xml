<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/titleBar">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:text="Cancel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Inspection Form"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:text="Ok"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

    </RelativeLayout>


    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/titleBar"
        android:id="@+id/generalInfo"
        android:columnCount="2"
        android:layout_marginTop="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginBottom="10sp"
            android:text="Name: "
            android:textStyle="bold" />

        <TextView
            android:text="Pond#1-Vaughan/400"
            android:layout_gravity="end"
            android:textAlignment="textEnd"/>

        <TextView
            android:text="Location"
            android:layout_marginBottom="10sp"
            android:textStyle="bold" />

        <TextView
            android:text="North-East corner of HWY400"
            android:layout_gravity="end"
            android:textAlignment="textEnd"/>

        <Button
            android:text="..."
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_marginLeft="5sp"
            android:background="@color/lgrey"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="10sp"
            android:layout_width="24sp"/>

    </GridLayout>


    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/generalInfo"
        android:id="@+id/field1"
        android:columnCount="6"
        android:layout_marginTop="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginBottom="10sp"
            android:text="Site ID\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Name\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Location\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Staff\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Equipment\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Description"
            android:textSize="10sp"
            android:textStyle="bold"
            android:maxLength="10000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


        <TextView
            android:layout_marginBottom="10sp"
            android:text="    1"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Bench\nMark"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="625,460\n4,851,314"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="A - 2"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Measuring\nTape"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Make sure to record any\noffset from the actual\nbench mark"
            android:textSize="10sp"
            android:textStyle="normal"
            android:maxLength="10000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


    </GridLayout>


    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/field1"
        android:id="@+id/inputfield1"
        android:columnCount="2"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:text="Condition\n(1,2,3,4,5)"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:backgroundTint="@color/white"
            android:layout_marginRight="10sp"
            android:textColor="@color/lgrey"
            android:textStyle="bold"
            />

        <EditText
            android:text="|     Comments________________________"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/lgrey"
            android:textStyle="bold"
            />


    </GridLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/inputfield1"
        android:id="@+id/field2"
        android:columnCount="6"
        android:layout_marginTop="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginBottom="10sp"
            android:text="Site ID\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Name\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Location\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Staff\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Equipment\t|"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Description"
            android:textSize="10sp"
            android:textStyle="bold"
            android:maxLength="10000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


        <TextView
            android:layout_marginBottom="10sp"
            android:text="    1"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Emergency\nSpillway"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="625,687\n4,852,007"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="A - 1"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text=""
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Check for structural\ncondition (cracking,\nflaking, broken,\nseparating, leaning),\nobstructions."
            android:textSize="10sp"
            android:textStyle="normal"
            android:maxLength="10000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


    </GridLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/field2"
        android:id="@+id/inputfield2"
        android:columnCount="2"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:text="   3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:backgroundTint="@color/white"
            android:layout_marginRight="10sp"
            android:textColor="@color/lgrey"
            android:textStyle="normal"
            />

        <EditText
            android:text="|     Some garbage to be removed"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/lgrey"
            android:textStyle="normal"
            />


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:textSize="12sp"
            android:text="  Inspection Record"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_columnWeight="1"/>

        <EditText
            android:text="Date (yyyy/mm/dd)"
            android:textSize="12sp"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/lgrey"
            android:textStyle="bold"
            />

        <EditText
            android:text="  By_____________"
            android:textSize="12sp"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/lgrey"
            android:textStyle="bold"
            />

        <EditText
            android:text="Total Duration (min)"
            android:textSize="12sp"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/lgrey"
            android:textStyle="bold"
            />


    </GridLayout>


</RelativeLayout>