<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/inspectionTopLayer"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/inspectionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:theme="@style/ToolbarColoredBackArrow">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|left|center_vertical"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:text="Inspection Type"
            android:id="@+id/ilabel"
            android:textColor="@color/white"
            android:textSize="16dp"/>

        <ImageButton
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:id="@+id/iTypes"
            android:src="@drawable/ic_edit_black_24dp"
            android:scaleType="centerInside"
            android:backgroundTint="@color/white"
            android:background="@drawable/circle_button"/-->

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:dropDownWidth="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:foregroundTint="@color/white"
            android:background="@drawable/spinner_background"
            android:id="@+id/iTypeSpinner"/>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/iListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0sp"/>

</LinearLayout>