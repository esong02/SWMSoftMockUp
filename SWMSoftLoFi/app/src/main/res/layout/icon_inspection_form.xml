<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:id="@+id/inspectionTopLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/inspectionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:titleTextColor="@color/white"
        android:layout_alignParentTop="true"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:theme="@style/ToolbarColoredBackArrow">

    </android.support.v7.widget.Toolbar>


    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dropDownWidth="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:foregroundTint="@color/white"
        android:background="@drawable/spinner_background"
        android:layout_below="@id/inspectionBar"
        android:id="@+id/iTypeSpinner"/>


    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iTypeSpinner"
        android:layout_centerHorizontal="true"
        android:background="@drawable/info_background"
        android:layout_margin="10dp"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/iconGrid"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="20dp"
        android:stretchMode="columnWidth"
        android:gravity="center"></GridView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dimScreen"
        android:orientation="vertical"
        android:background="@color/partialblack"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewPager"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:id="@+id/cancelTaskButton"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:src="@drawable/ic_check_white_24dp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:id="@+id/completeTaskButton"/>

    </RelativeLayout>

</RelativeLayout>