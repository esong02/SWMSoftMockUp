<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="450dp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/info_background"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_header"
            android:text="Asset Information"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="start"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Name"
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="end"
                android:maxLines="2"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Pond#1-Vaughan/400"
                android:textColor="@color/grey"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="start"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Location"
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:layout_columnWeight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:maxLines="2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="North-East corner of HWY400"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="start"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Description"
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:layout_columnWeight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:maxLines="5"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="North of park servicing major system flows from the south"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="start"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Comments"
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="end"
                android:maxLines="2"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="N/A"
                android:textColor="@color/grey"
                android:textSize="12dp" />

        </GridLayout>

    </LinearLayout>

    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_white_24dp"
        android:id="@+id/cancelAssetInfoButton"
        android:background="@drawable/red_button"/>

</LinearLayout>