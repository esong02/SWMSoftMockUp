<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_background"
    android:id="@+id/front">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subLayer"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:paddingTop="5dp"
            android:gravity="right|bottom"
            android:textSize="12dp"
            android:text="Type"
            android:textStyle="normal|italic"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/type"
            android:paddingTop="5sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp" >

            <TextView
                android:id="@+id/lblListItem"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="left|start|top"
                android:textSize="18dp"
                android:text="LID Name"
                android:maxLines="4"
                android:textStyle="normal"
                android:textColor="@color/black"/>

        </LinearLayout>

        <GridLayout
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:columnCount="3"
            android:layout_below="@id/type"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_horizontal"
            android:id="@+id/activityRow">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/pInspectAction"
                    android:background="@color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/p_inspection"/>

                <TextView
                    android:layout_height="40dp"
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:text="Records"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/inspectAction"
                    android:scaleType="centerInside"
                    android:background="@color/transparent"
                    android:src="@drawable/inspection"/>

                <TextView
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:text="Inspections"
                    android:textStyle="normal"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/infoAction"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_info_outline_black_24dp"/>

                <TextView
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:text="Info"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

            </LinearLayout>

        </GridLayout>

    </RelativeLayout>

</LinearLayout>