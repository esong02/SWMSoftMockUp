<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <GridLayout
        android:columnCount="2"
        android:id="@+id/inspectionHelp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_height="100sp"
            android:layout_width="250sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:text="Excellent"
            android:textStyle="bold"
            android:id="@+id/firstRating"
            android:src="@drawable/excellent"
            android:textColor="@color/partialwhite"
            android:background="@drawable/excellent"
            />

        <Button
            android:layout_height="100sp"
            android:layout_width="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="3sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text=">"
            android:textColor="@color/white"
            android:background="@color/grey"
            />

        <Button
            android:layout_height="100sp"
            android:layout_width="250sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/secondRating"
            android:gravity="bottom|right"
            android:text="Satisfactory"
            android:textColor="@color/partialwhite"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            />

        <Button
            android:layout_height="100sp"
            android:layout_width="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="3sp"
            android:layout_marginBottom="5sp"
            android:textSize="10sp"
            android:text=">"
            android:textColor="@color/white"
            android:background="@color/grey"
            />

        <Button
            android:layout_height="100sp"
            android:layout_width="250sp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:gravity="bottom|right"
            android:text="Attention Required"
            android:id="@+id/thirdRating"
            android:textColor="@color/partialwhite"
            android:textStyle="bold"
            android:background="@drawable/attn_req"
            />

        <Button
            android:layout_height="100sp"
            android:layout_width="10sp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="3sp"
            android:layout_marginBottom="5sp"
            android:text=">"
            android:textColor="@color/white"
            android:background="@color/grey"
            />

        <Button
            android:layout_height="100sp"
            android:layout_width="250sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/fourthRating"
            android:gravity="bottom|right"
            android:text="Non Functional"
            android:textColor="@color/partialwhite"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            />

        <Button
            android:layout_height="100sp"
            android:layout_width="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="3sp"
            android:layout_marginBottom="5sp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text=">"
            android:textColor="@color/white"
            android:background="@color/grey"
            />

        <Button
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_height="100sp"
            android:layout_width="250sp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:text="Safety Hazard"
            android:textStyle="bold"
            android:id="@+id/fifthRating"
            android:textColor="@color/partialwhite"
            android:background="@color/colorPrimary"
            />

        <Button
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="3sp"
            android:layout_height="100sp"
            android:layout_width="10sp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text=">"
            android:textColor="@color/white"
            android:background="@color/grey"
            />

    </GridLayout>

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/red"
        android:id="@+id/subCancelButton"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_toRightOf="@id/inspectionHelp"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Select an Image"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@id/inspectionHelp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>